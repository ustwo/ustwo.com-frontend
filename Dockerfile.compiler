FROM ustwo/nodejs:4.1.1
MAINTAINER Nick Collings <nick@ustwo.com>

ENV TERM=xterm-256color \
    NODE_ENV=production

WORKDIR /usr/local/src

COPY compiler.json /home/ustwo/package.json
RUN npm install

ENV PATH $PATH:/home/ustwo/node_modules/.bin

COPY gulpfile.js /home/ustwo/gulpfile.babel.js
COPY src /home/ustwo/src

CMD ["npm", "run", "compile"]
